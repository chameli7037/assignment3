<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid fill for background color -->
    <solid android:color="#FFFFFF"/>

    <!-- Border for EditText -->
    <stroke
        android:width="2dp"
        android:color="#6200EE" /> <!-- Purple color for border -->

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
